{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noEmit": false,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"checkJs": true
	},
	"include": ["src"]
}
